{
  "title": "StreamXR Monitoring",
  "tags": ["streamxr"],
  "timezone": "browser",
  "refresh": "5s",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 100,
      "title": "Service Health",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 3 },
      "targets": [
        {
          "expr": "up{job=\"streamxr\"}",
          "refId": "A",
          "legendFormat": "StreamXR Server"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "textMode": "value_and_name",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "DOWN", "color": "red" },
                "1": { "text": "UP", "color": "green" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 0.5, "color": "yellow" },
              { "value": 1, "color": "green" }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 1,
      "title": "Active WebSocket Connections",
      "type": "stat",
      "gridPos": { "x": 0, "y": 3, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "streamxr_websocket_connections",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 1, "color": "green" }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Users Per Room",
      "type": "stat",
      "gridPos": { "x": 6, "y": 3, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(streamxr_room_users)",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 3,
      "title": "Shared Objects",
      "type": "stat",
      "gridPos": { "x": 12, "y": 3, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(streamxr_shared_objects_total)",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 4,
      "title": "CPU Usage %",
      "type": "stat",
      "gridPos": { "x": 18, "y": 3, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"streamxr\"}[1m]) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 70, "color": "yellow" },
              { "value": 90, "color": "red" }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 5,
      "title": "WebSocket Connections Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 7, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "streamxr_websocket_connections",
          "refId": "A",
          "legendFormat": "Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Asset Requests Rate",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 7, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(streamxr_asset_requests_total[1m])",
          "refId": "A",
          "legendFormat": "{{asset}} ({{lod}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 7,
      "title": "Asset Data Transfer Rate",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 15, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(streamxr_asset_bytes_transferred_total[1m])",
          "refId": "A",
          "legendFormat": "{{asset}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      }
    },
    {
      "id": 8,
      "title": "Client Bandwidth",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 15, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "streamxr_client_bandwidth_bps or vector(0)",
          "refId": "A",
          "legendFormat": "{{client_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bps",
          "noValue": "0"
        }
      }
    },
    {
      "id": 9,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 23, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"streamxr\"}[1m]) * 100",
          "refId": "A",
          "legendFormat": "CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      }
    },
    {
      "id": 10,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 23, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"streamxr\"}",
          "refId": "A",
          "legendFormat": "Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    }
  ],
  "time": { "from": "now-1h", "to": "now" }
}
